
<form action="/change-password" method="post">
    <input type="checkbox" id="modal-change-password" hidden >
    <label for="modal-change-password" class="layer-hidden-close-modal"></label>
    <div class="modal-change-password">
        <label for="modal-change-password" class="modal-close"><ion-icon name="close"></ion-icon></label>
        <h2 class="modal-header">
            Change Password Account
        </h2>
        <div class="modal-content">
            <div class="form-group">
                <input type="password" placeholder=" " name="newPassword">
                <label for="">New Password</label>
            </div>
            <div class="form-group">
                <input type="password" placeholder=" " name="confirmPassword">
                <label for="">Repeat Password</label>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn-change">Change</button>
        </div>
    </div>
</form>